.PHONY : all clean list $(LIST) 

all: $(LIST)

$(LIST):
	make $(OPT) -C $@

#----------------------------------------------------------------------------------------

CLEAN_LIST = $(addprefix CLEAN/,$(LIST))

clean: $(CLEAN_LIST)

$(CLEAN_LIST):
	make -C $(patsubst CLEAN/%,%,$@) clean

#----------------------------------------------------------------------------------------

LIST_LIST = $(addprefix LIST/,$(LIST))

list: $(LIST_LIST)

$(LIST_LIST):
	make -C $(patsubst LIST/%,%,$@) list

#----------------------------------------------------------------------------------------
